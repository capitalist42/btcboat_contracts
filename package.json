{
  "name": "rsk-hardhat-starter",
  "private": true,
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "lint": "npx prettier --list-different 'contracts/**/*.sol' 'test/**/*.js'",
    "lint-fix": "npx prettier --write 'contracts/**/*.sol' 'test/**/*.js'",
    "coverage": "hardhat coverage",
    "sc-analysis-static": "slither .",
    "sc-analysis-dynamic": "myth analyze contracts/*.sol",
    "flatten": "hardhat flatten contracts/* > flattened.sol",
    "watch-compile": "hardhat watch compilation",
    "deploy-rsktestnet": "hardhat run scripts/deploy.js --network rsktestnet",
    "console-rsktestnet": "hardhat console --network rsktestnet",
    "new-rsktestnet-seed-phrase": "hardhat run scripts/setup-seed-phrase.js --network rsktestnet",
    "download-rsktestnet-block": "hardhat run scripts/download-latest-block.js --network rsktestnet"
  },
  "postinstall": "typechain",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@nomiclabs/hardhat-ethers": "2.0.5",
    "@nomiclabs/hardhat-waffle": "2.0.3",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.6",
    "@types/jest": "^29.5.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.9",
    "bip39": "3.0.4",
    "chai": "^4.3.8",
    "ethereum-waffle": "3.4.4",
    "ethers": "^6.7.1",
    "hardhat": "2.17.2",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "2.6.2",
    "prettier-plugin-solidity": "1.0.0-dev.22",
    "solidity-coverage": "0.8.4",
    "ts-node": "10.9.1",
    "typechain": "^8.3.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@ethersproject/abstract-provider": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@metamask/eth-sig-util": "^6.0.0",
    "@openzeppelin/contracts": "^4.9.3",
    "@sovryn/contracts": "^1.0.13",
    "@sovryn/ethers-provider": "^1.0.2",
    "@sovryn/sdk": "^0.0.4",
    "hardhat-watcher": "^2.5.0",
    "sovryn-mynt": "git+https://github.com/DistributedCollective/mynt.git#9a1761f"
  }
}
